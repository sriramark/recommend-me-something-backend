# Environment Variables Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/recommend_me_something

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Google Books API
GOOGLE_API_KEY=your_google_books_api_key_here

# The Movie Database (TMDB) API
TMDB_API_KEY=your_tmdb_api_key_here

# YouTube Data API
YOUTUBE_DATA_API_KEY=your_youtube_data_api_key_here

# Application Configuration
DEBUG=false
APP_NAME="Recommend Me Something API"
APP_VERSION="1.0.0"

# CORS Configuration (optional - can be configured in config.yml)
CORS_ORIGINS=["*"]
CORS_METHODS=["GET", "POST", "PUT", "DELETE"]
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# OpenAI Model Configuration
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7
